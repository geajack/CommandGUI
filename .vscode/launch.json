    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug parser",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tests/parser/test",
            "args": ["validate", "tests/parser/cases/boolean.json"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [ 
                {
                    "name": "my_boolean",
                    "value": "true"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug full program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/CommandGUI",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}