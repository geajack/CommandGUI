    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug parser",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tests/parser/test",
            "args": ["tests/parser/cases/invalid.json"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug full program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/CommandGUI",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}